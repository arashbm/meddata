<%- model_class = Article -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<div>
  <div>
    <strong><%= model_class.human_attribute_name(:pubmed_id) %>:</strong>
    <%= @article.pubmed_id %>
  </div>
  <div>
    <strong><%= model_class.human_attribute_name(:title) %>:</strong>
    <%= @article.title %>
  </div>
  <div>
    <strong><%= model_class.human_attribute_name(:abstract) %>:</strong>
    <%= @article.abstract %>
  </div>
  <div>
    <strong><%= model_class.human_attribute_name(:raw_pubmed_xml) %>:</strong>
    <pre><%= @article.raw_pubmed_xml %></pre>
  </div>
</div>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
    articles_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
    edit_article_path(@article), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
    article_path(@article),
    :method => 'delete',
    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
    :class => 'btn btn-danger' %>
</div>
